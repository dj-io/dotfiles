{
    "workbench.colorTheme": "SynthWave '84",
    "workbench.activityBar.location": "bottom",
    "workbench.activityBar.orientation": "vertical",
    "workbench.editor.showTabs": "single",
    "workbench.statusBar.visible": false,
    "workbench.tips.enabled": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.indent": 10,
    "workbench.hover.delay": 10000,
    "window.customTitleBarVisibility": "never",
    "workbench.colorCustomizations": {
        // vesper++ theme overrides
       "workbench.background": "#1A1A1A",
       "sideBar.background": "#1A1A1A",
       "activityBar.background": "#1A1A1A",
       "titleBar.activeBackground": "#292137",
       "titleBar.inactiveBackground": "#292137",
       "statusBar.background": "#1A1A1A",
       "panel.background": "#1A1A1A",
       "editorCursor.background": "#1A1A1A",
       "breadcrumb.background": "#1A1A1A",
       "breadcrumbPicker.background": "#1A1A1A",
       "editorGroupHeader.tabsBackground": "#1A1A1A",
       "editorGroupHeader.noTabsBackground": "#1A1A1A",
       "editorGroupHeader.border": "#1A1A1A",
       // vesper++ flat theme overrides
       "[SynthWave '84]": {
           "editor.background": "#292137",
           "editorSuggestWidget.selectedBackground": "#292137",
           "editorOverviewRuler.border": "#292137",
           "editorGutter.background": "#292137",
           "sideBar.background": "#292137",
           "breadcrumb.background": "#292137",
           "breadcrumbPicker.background": "#292137",
           "editorGroupHeader.tabsBackground": "#292137",
           "editorGroupHeader.noTabsBackground": "#292137",
           "editorGroupHeader.border": "#292137"
        }
    },
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.fontSize": 12,
    "editor.fontLigatures": true,
    // "editor.lineHeight": 1.5,
    // "editor.fontFamily": "Dank Mono",
    "editor.lineNumbers": "relative",
    "editor.showFoldingControls": "never",
    "editor.guides.indentation": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.stickyScroll.enabled": false,
    "editor.codeLens": false,
    "editor.lightbulb.enabled": "off",
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.tabCompletion": "on",
    "emmet.triggerExpansionOnTab": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.expandSingleFolderWorkspaces": false,
    "explorer.compactFolders": false,
    "explorer.decorations.badges": false,
    // "explorer.expandSingleFolderWorkspaces": true,
    "window.zoomLevel": 1,
    "window.titleBarStyle": "native",
    "window.nativeTabs": false,
    "extensions.ignoreRecommendations": true,
    "material-icon-theme.hidesExplorerArrows": true,
    "breadcrumbs.enabled": false,
    "custom-ui-style.electron": {
        "titleBarStyle": "hiddenInset",
        "trafficLightPosition": {
            "x": 75,
            "y": 14.5
        }
    },
    "custom-ui-style.stylesheet": {
        ".notification-toast": "box-shadow: none !important",
        ".quick-input-widget.show-file-icons": "box-shadow: none !important",
        ".quick-input-widget": "top: 25vh !important",
        ".quick-input-list .scrollbar": "display: none",
        ".monaco-action-bar.quick-input-inline-action-bar": "display: none",
        ".editor-widget.find-widget": "box-shadow: none; border-radius: 4px",
        ".quick-input-titlebar": "background: #100B15 !important",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none",
        ".monaco-scrollable-element > .shadow.top": "display: none",
        ".sidebar .title-label": "padding: 0 !important",
        ".sidebar": "border: none !important",
        ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
        ".monaco-list-row.focused": "outline: none !important",
        ".monaco-editor .scroll-decoration": "display: none",
        ".title-actions": "display: none !important",
        ".title.show-file-icons .label-container .monaco-icon-label.file-icon": "justify-content: center; padding: 0 !important",
        ".title .monaco-icon-label:after": "margin-right: 0",
        ".title .monaco-icon-label.file-icon": "margin: 0 60px",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title > .label-container > .title-label": "padding-left: 75px",
        ".monaco-editor .margin, .monaco-editor .inputarea.ime-input": "background: none",
        ".monaco-editor .cursors-layor .cursor": "color: linear-gradient(135deg, #1A1A1A 10%, ##D4A959 90%)"
    },
    "files.autoSave": "afterDelay",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultColorDecorators": "never",
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "off",
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ]
    },
    "redhat.telemetry.enabled": false,
    "gitlens.graph.layout": "editor",
    "gitlens.plusFeatures.enabled": false,
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "editor.accessibilitySupport": "off"
    // "workbench.colorTheme": "SynthWave '84",
}
